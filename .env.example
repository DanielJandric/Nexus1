# Variables d'environnement - PILOTE
# Copiez ce fichier en .env et remplissez vos vraies valeurs

# Base de donn√©es
DATABASE_URL=postgresql://username:password@localhost:5432/tickets_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tickets_db
DB_USER=username
DB_PASSWORD=password

# OpenAI API
OPENAI_API_KEY=sk-your-openai-key-here

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Application
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3001

# Azure Configuration (pour production)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection
AZURE_CONTAINER_NAME=tickets-files

# Notifications
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Monitoring
LOG_LEVEL=info
ENABLE_LOGGING=true

